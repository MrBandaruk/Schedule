@model Schedule.BLL.Model.NewsViewModelItem
@{
    ViewBag.Title = "Add article";
}


@using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
        <h4>Short Title</h4>
        @Html.TextBoxFor(model => model.ShortTitle, new { @class = "form-control", required = "required", autocomplete = "off" })
        <br />
        <h4>Full Title</h4>
        @Html.TextBoxFor(model => model.FullTitle, new { @class = "form-control", required = "required", autocomplete = "off" })
        <br />
        <h4>Images</h4>
        @Html.TextBoxFor(Model => Model.NewsImages, new { type = "file", name = "uploadImage", multiple = "true", @class = "btn btn-default" })
        <br />
        <br />
        <h4>Short Article</h4>
        @Html.TextAreaFor(model => model.ShortArticle, 10, 0, new { @class = "form-control", required = "required", autocomplete = "off" })
        <br />
        <h4>Full Article</h4>
        @Html.TextAreaFor(model => model.FullArticle, 20, 0, new { @class = "form-control", required = "required", autocomplete = "off" })
        <br />
        <input type="submit" value="Save" class="btn btn-success" id="btn-save" />
        @Html.ActionLink("Back to all items", "Panel", null, new { @class = "btn btn-default", id = "btn-back" })
}

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript" src="~/Scripts/Custom/isDirty.js"></script>