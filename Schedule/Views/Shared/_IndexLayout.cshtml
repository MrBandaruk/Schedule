<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Schedule</title>
	@*<link rel="stylesheet" href="~/Content/Pages/Index.css" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryconf")

</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Schedule", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo-link", style = "color: white" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { style = "color: white", @class = "ActionLink" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { style = "color: white", @class = "ActionLink" })</li>
                    <li>@Html.ActionLink("Feedback", "Feedback", "Home", null, new { style = "color: white", @class = "ActionLink" })</li>
                    <li>@Html.ActionLink("News", "Index", "News", null, new { style = "color: white", @class = "ActionLink" })</li>
                    <li>@Html.ActionLink("Calendar", "Index", "Calendar", null, new { style = "color: white", @class = "ActionLink" })</li>
                </ul>
                <ul style = "color: white" class="nav navbar-nav navbar-right">
                    @if (!User.Identity.IsAuthenticated)
					{
						<li>@Html.ActionLink("Log In", "Login", "Account", null, new { style = "color: white" })</li>
						<li>@Html.ActionLink("Sign Up", "Register", "Account", null, new { style = "color: white" })</li>
					}
					else
					{
						<li class="identity-name">Hello, @User.Identity.Name</li>
						<li class="identity-logout"> @Html.ActionLink("Log Out", "Logout", "Account", new { style = "color: white", @class = "logout-link" }) </li>
					}

                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Schedule</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)


</body>
</html>
