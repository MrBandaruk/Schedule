@using System.Web.UI.WebControls
@model Schedule.BLL.Model.LoginModel
<link rel="stylesheet" href="~/Content/animate.css" />


@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div style="color: black; " class="col-lg-12">
        <div class="text-center"><h3><b>@Schedule.Resources.HomeTexts.Log_In</b></h3></div>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>@Schedule.Resources.HomeTexts.UserName</label>
            @Html.EditorFor(model => model.UserName, new {htmlAttributes = new {@class = "form-control", PlaceHolder= @Schedule.Resources.HomeTexts.UserName } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { style = "color: black", @class = "text-danger"})
        </div>
        
        <div class="form-group">
            <label>@Schedule.Resources.HomeTexts.Password</label>
            @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control", PlaceHolder = @Schedule.Resources.HomeTexts.Password } })
            @Html.ValidationMessageFor(model => model.Password, "", new { style = "color: black", @class = "text-danger"})
        </div>

        <div class="form-group" style="color: black">
            <input type="submit" value="@Schedule.Resources.HomeTexts.Log_In" class="btn btn-default"/>
            <a class="reg-link" href="@Url.Action("Register", "Account")">@Schedule.Resources.HomeTexts.Registration!</a>
        </div>
        
    </div>


}